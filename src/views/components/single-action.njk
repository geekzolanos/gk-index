{% if pkg.actions.length == 1 %}
    <a href="{{ pkg.actions[0].url }}" target="_blank" class="btn btn-lg btn-outline-light">
        <i class="{{ pkg.actions[0].iconClass }} mr-2"></i>{{ pkg.actions[0].name }}
    </a>
{% elif pkg.actions.length == 2 %}
    <div class="btn-group mt-5">
        <a href="{{ pkg.actions[0].url }}" target="_blank" class="btn btn-lg btn-outline-light">
            <i class="{{ pkg.actions[0].iconClass }} mr-2"></i>{{ pkg.actions[0].name }}
        </a>
        <a href="{{ pkg.actions[1].url }}" 
            target="_blank"
            class="btn btn-lg btn-outline-light" 
            data-toggle="tooltip" 
            data-placement="top" 
            data-title="{{ pkg.actions[1].name }}">
            <i class="{{ pkg.actions[1].iconClass }}"></i>
        </a>
    </div>
{% else %}
    <div class="btn-group mt-5">
        <a href="{{ pkg.actions[0].url }}" target="_blank" class="btn btn-lg btn-outline-light">
            <i class="{{ pkg.actions[0].iconClass }} mr-2"></i>{{ pkg.actions[0].name }}
        </a>
        <button type="button" class="btn btn-lg btn-outline-light dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"></button>
        <div class="dropdown-menu dropdown-menu-right">
            <h6 class="dropdown-header">Acciones adicionales</h6>
            {% for i in range(1, pkg.actions.length) -%}
                <a href="{{ pkg.actions[i].url }}" class="dropdown-item">
                    <i class="{{ pkg.actions[i].iconClass }} mr-2"></i>{{ pkg.actions[i].name }}
                </a>
            {%- endfor %}
        </div>
    </div>
{% endif %}